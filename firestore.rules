rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /days/{dayId}/slides/{slideId} {
      allow read: if request.auth != null;
    }

    match /quizResults/{resultId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;                  
    }

    match /appConfig/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'kwaheedsays@gmail.com';
    }
    
    match /quizUsers/{userId} {
      allow read: if request.auth != null;  // Anyone authenticated can read names for leaderboard
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == 'kwaheedsays@gmail.com');
    }
    
    // Rules for Al-Mulk Verse Engagement Stats
    match /verseStats/{verseId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Allow incrementing or decrementing counts safely
      allow update: if request.auth != null && 
                    (request.resource.data.get('playCount', 0) == resource.data.get('playCount', 0) + 1 ||
                     request.resource.data.get('likeCount', 0) == resource.data.get('likeCount', 0) + 1 ||
                     request.resource.data.get('likeCount', 0) == resource.data.get('likeCount', 0) - 1 ||
                     request.resource.data.get('memorizedCount', 0) == resource.data.get('memorizedCount', 0) + 1 ||
                     request.resource.data.get('memorizedCount', 0) == resource.data.get('memorizedCount', 0) - 1);

      // User-specific Like status
      match /userLikes/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User-specific Memorised status
      match /userMemorized/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /whatsappGroups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'kwaheedsays@gmail.com';
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
